<Window x:Class="KanbanDesktop.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kanban - Login"
        Height="400" Width="500"
        Background="{StaticResource BackgroundBlack}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="350">
            <TextBlock Text="KANBAN" 
                       FontSize="36" 
                       FontWeight="Bold" 
                       Foreground="{StaticResource PrimaryGreen}" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

            <!-- Toggle Login/Cadastrar -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="LoginTabButton"
                        Content="LOGIN" 
                        Grid.Column="0"
                        Height="40"
                        Background="{StaticResource DarkGreen}"
                        Foreground="{StaticResource TextWhite}"
                        FontSize="14"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Click="LoginTab_Click"
                        Cursor="Hand"/>

                <Button x:Name="RegisterTabButton"
                        Content="CADASTRAR" 
                        Grid.Column="1"
                        Height="40"
                        Background="{StaticResource CardBlack}"
                        Foreground="{StaticResource TextWhite}"
                        FontSize="14"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Click="RegisterTab_Click"
                        Cursor="Hand"/>
            </Grid>

            <TextBlock Text="Usuário" 
                       Foreground="{StaticResource TextWhite}" 
                       Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox" 
                     Height="35" 
                     FontSize="14"
                     Background="{StaticResource CardBlack}"
                     Foreground="{StaticResource TextWhite}"
                     BorderBrush="{StaticResource BorderGray}"
                     BorderThickness="1"
                     Padding="10,5"/>

            <TextBlock Text="Senha" 
                       Foreground="{StaticResource TextWhite}" 
                       Margin="0,20,0,5"/>
            <PasswordBox x:Name="PasswordBox" 
                         Height="35" 
                         FontSize="14"
                         Background="{StaticResource CardBlack}"
                         Foreground="{StaticResource TextWhite}"
                         BorderBrush="{StaticResource BorderGray}"
                         BorderThickness="1"
                         Padding="10,5"/>

            <!-- Campo Confirmar Senha (só aparece no cadastro) -->
            <TextBlock x:Name="ConfirmPasswordLabel"
                       Text="Confirmar Senha" 
                       Foreground="{StaticResource TextWhite}" 
                       Margin="0,20,0,5"
                       Visibility="Collapsed"/>
            <PasswordBox x:Name="ConfirmPasswordBox" 
                         Height="35" 
                         FontSize="14"
                         Background="{StaticResource CardBlack}"
                         Foreground="{StaticResource TextWhite}"
                         BorderBrush="{StaticResource BorderGray}"
                         BorderThickness="1"
                         Padding="10,5"
                         Visibility="Collapsed"/>

            <Button x:Name="ActionButton"
                    Content="ENTRAR" 
                    Height="40" 
                    Margin="0,30,0,0"
                    Background="{StaticResource DarkGreen}"
                    Foreground="{StaticResource TextWhite}"
                    FontSize="16"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="ActionButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="{StaticResource DarkGreen}"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryGreen}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <TextBlock x:Name="ErrorMessage" 
                       Foreground="Red" 
                       HorizontalAlignment="Center" 
                       Margin="0,20,0,0"
                       Visibility="Collapsed"/>

            <TextBlock x:Name="SuccessMessage" 
                       Foreground="{StaticResource PrimaryGreen}" 
                       HorizontalAlignment="Center" 
                       Margin="0,10,0,0"
                       Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Window>
