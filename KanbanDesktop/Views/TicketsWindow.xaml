<Window x:Class="KanbanDesktop.Views.TicketsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema de Chamados" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- CabeÃ§alho -->
        <Border Grid.Row="0" Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="ðŸ“‹ Sistema de Chamados" FontSize="24" FontWeight="Bold" Foreground="#333"/>
                <TextBlock x:Name="UserInfoText" Text="UsuÃ¡rio: ..." FontSize="14" Foreground="#666" Margin="0,5,0,0"/>
                <Button x:Name="LogoutButton" Content="Sair" Click="LogoutButton_Click" 
                        Background="#F44336" HorizontalAlignment="Right" Width="100" Margin="0,-30,0,0"/>
            </StackPanel>
        </Border>

        <!-- ConteÃºdo Principal -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- FormulÃ¡rio de CriaÃ§Ã£o de Ticket -->
            <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="20">
                <StackPanel>
                    <TextBlock Text="âœï¸ Criar Novo Chamado" FontSize="18" FontWeight="Bold" Foreground="#333" Margin="0,0,0,15"/>

                    <TextBlock Text="Enviar para Admin:" FontWeight="SemiBold" Foreground="#555"/>
                    <ComboBox x:Name="AdminComboBox" DisplayMemberPath="Username" SelectedValuePath="Id"/>

                    <TextBlock Text="TÃ­tulo:" FontWeight="SemiBold" Foreground="#555" Margin="0,15,0,0"/>
                    <TextBox x:Name="TitleTextBox" Height="40"/>

                    <TextBlock Text="DescriÃ§Ã£o:" FontWeight="SemiBold" Foreground="#555" Margin="0,15,0,0"/>
                    <TextBox x:Name="DescriptionTextBox" Height="150" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

                    <Button x:Name="RewriteButton" Content="ðŸ¤– Melhorar com IA" Click="RewriteButton_Click" 
                            Background="#2196F3" Margin="0,10,0,0"/>

                    <Button x:Name="CreateTicketButton" Content="ðŸ“¤ Enviar Chamado" Click="CreateTicketButton_Click" 
                            Margin="0,10,0,0"/>

                    <TextBlock x:Name="StatusMessage" Text="" FontSize="12" Foreground="#4CAF50" 
                               HorizontalAlignment="Center" Margin="0,10,0,0" Visibility="Collapsed"/>
                </StackPanel>
            </Border>

            <!-- Lista de Tickets -->
            <Border Grid.Column="2" Background="White" CornerRadius="10" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="ðŸ“Š Meus Chamados" FontSize="18" FontWeight="Bold" Foreground="#333"/>
                        <Button x:Name="RefreshButton" Content="ðŸ”„ Atualizar" Click="RefreshButton_Click" 
                                Background="#9E9E9E" Margin="20,0,0,0" Padding="10,5"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="TicketsItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F9F9F9" CornerRadius="8" Padding="15" Margin="0,0,0,10" BorderBrush="#E0E0E0" BorderThickness="1">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="Bold" Foreground="#333"/>
                                            <TextBlock Text="{Binding Description}" FontSize="12" Foreground="#666" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                            
                                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                                <Border Background="#2196F3" CornerRadius="3" Padding="8,3">
                                                    <TextBlock Text="{Binding AdminUsername, StringFormat='ðŸ‘¤ Admin: {0}'}" 
                                                               Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                                                </Border>
                                                <Border Background="#FF9800" CornerRadius="3" Padding="8,3" Margin="5,0,0,0">
                                                    <TextBlock Text="{Binding CurrentColumnName, StringFormat='ðŸ“ {0}'}" 
                                                               Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                                                </Border>
                                            </StackPanel>

                                            <TextBlock Text="{Binding CreatedAt, StringFormat='ðŸ• Criado em: {0:dd/MM/yyyy HH:mm}'}" 
                                                       FontSize="10" Foreground="#999" Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
