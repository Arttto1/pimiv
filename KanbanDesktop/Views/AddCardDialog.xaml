<Window x:Class="KanbanDesktop.Views.AddCardDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Novo Card"
        Height="400" Width="500"
        Background="{StaticResource BackgroundBlack}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Título" 
                       Foreground="{StaticResource TextWhite}" 
                       Margin="0,0,0,5"/>
            <TextBox x:Name="TitleTextBox" 
                     Height="35" 
                     FontSize="14"
                     Background="{StaticResource CardBlack}"
                     Foreground="{StaticResource TextWhite}"
                     BorderBrush="{StaticResource BorderGray}"
                     BorderThickness="1"
                     Padding="10,5"/>

            <TextBlock Text="Descrição" 
                       Foreground="{StaticResource TextWhite}" 
                       Margin="0,20,0,5"/>
            <Grid>
                <TextBox x:Name="DescriptionTextBox" 
                         Height="150" 
                         FontSize="14"
                         Background="{StaticResource CardBlack}"
                         Foreground="{StaticResource TextWhite}"
                         BorderBrush="{StaticResource BorderGray}"
                         BorderThickness="1"
                         Padding="10,5,45,5"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"/>
                <Button x:Name="RewriteButton"
                        Content="✨"
                        Width="32"
                        Height="32"
                        Background="Transparent"
                        Foreground="{StaticResource PrimaryGreen}"
                        BorderBrush="{StaticResource PrimaryGreen}"
                        BorderThickness="1"
                        FontSize="14"
                        Cursor="Hand"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,8,8,0"
                        ToolTip="Reescrever com IA"
                        Click="Rewrite_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="16">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource DarkGreen}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,30,0,0">
                <Button Content="CANCELAR" 
                        Width="100" 
                        Height="35"
                        Background="{StaticResource BorderGray}"
                        Foreground="{StaticResource TextWhite}"
                        BorderThickness="0"
                        Margin="0,0,10,0"
                        Cursor="Hand"
                        Click="Cancel_Click"/>
                <Button Content="CRIAR" 
                        Width="100" 
                        Height="35"
                        Background="{StaticResource DarkGreen}"
                        Foreground="{StaticResource TextWhite}"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="Create_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
