             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="PrimaryGreen" Color="#00FF00"/>
            <SolidColorBrush x:Key="DarkGreen" Color="#00AA00"/>
            <SolidColorBrush x:Key="BackgroundBlack" Color="#0A0A0A"/>
            <SolidColorBrush x:Key="CardBlack" Color="#1A1A1A"/>
            <SolidColorBrush x:Key="TextWhite" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="BorderGray" Color="#333333"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
